                                svg(width='16' height='16')
                                use(href='sprite.svg#favorite_sprite')
                            li.m-card-dropdown__list-item
                              a.m-card-dropdown__link(href="")  Visit
                                svg(width='16' height='16')
                                  use(href='sprite.svg#external_sprite')
                            li.m-card-dropdown__list-item
                              a.m-card-dropdown__link(href="")  Share
                                svg(width='16' height='16')
                                  use(href='sprite.svg#share_sprite')
                            li.m-card-dropdown__list-item
                              a.m-card-dropdown__link(href="")  View
                                svg(width='16' height='16')
                                  use(href='sprite.svg#views_sprite')
                          .arrow(data-popper-arrow)
                  a(href="") 
                    p.m-card-item__desc Generate SEO-friendly content quickly with the AI SEO Outline tool. Get an op...
            .m-card-item__bottom
              .m-card-item__payment.m-card-payment 
                span.m-card-payment__item(style="--background:#EBEBEB")
                  img(src=require('@/images/payment-icon.svg'), alt="")
                span.m-card-payment__item(style="--background:#F5E769;color:var(--black-base)") Free Trial
              .m-card-item__tags.card-tags
                ul.card-tags__list
                  li.card-tags__list-item
                    a.card-tags__item(href="")  Design
                  li.card-tags__list-item.share
                    button.card-tags__item(aria-describedby="share-tooltip" id=`card-tags-button-${rand2}` data-tooltip-trigger=`card-tags-tooltip-${rand}` data-tooltip-placement="top" aria-expanded="false" aria-controls="card-tags-tooltip") +3
                    span.card-tags__tooltip(id=`card-tags-tooltip-${rand2}` aria-hidden="true" data-tooltip=`card-tags-tooltip-${rand}`) 
                      ul.card-tags__tooltip-list.card-tags__list 
                        li.card-tags__tooltip-item.card-tags__list-item 
                          a.card-tags__tooltip-list-link.card-tags__item(href="")  Code
                        li.card-tags__tooltip-item.card-tags__list-item 
                          a.card-tags__tooltip-list-link.card-tags__item(href="")  Design 
                        li.card-tags__tooltip-item.card-tags__list-item 
                          a.card-tags__tooltip-list-link.card-tags__item(href="")  Eco
                      .arrow(data-popper-arrow)
                .card-tags__buttons
                  button.m-card-item__favorite 
                    span Favorite
                    svg(width='16' height='16')
                      use(href='sprite.svg#favorite_sprite')
                  a.m-card-item__external-link(href="" target="_blank" rel="noopener noreferrer" aria-label="Visit")
                    span Visit
                    svg(width='16' height='16')
                      use(href='sprite.svg#external_sprite')
