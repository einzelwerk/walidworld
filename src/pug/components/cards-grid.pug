section.section.container.cards-section
  .promo-section 
    .promo-section__item
    .promo-section__item
  .cards 
    .cards__heading 
      h3.cards__count Showing 120 of 923 Tools
      .cards__filter
        .custom-select-wrapper.cards__filter-btn
          button.custom-select.custom-select--primary.btn.btn--secondary(type="button" aria-expanded="false" aria-label="Choose plan" aria-controls="grid-filter-1")
            span.custom-select__placeholder
              span Choose plan
              svg.custom-select__arrow(width="8" height="8")
                use(xlink:href="sprite.svg#arrow-down_sprite") 
          .custom-select__content.custom-select__content--primary(id="grid-filter-1" aria-hidden="true") 
            .custom-select__heading.hidden-desktop 
              h3.custom-select__title Choose plan
              button.custom-select__close.js-close-select(type="butom")
                svg(width="20" height="20")
                  use(xlink:href="sprite.svg#close_sprite") 
            ul.checkbox-list
              each val in [1,2,3,3,3,3] 
                li.checkbox-list__item
                  label.checkbox-list__label
                    input.checkbox-list__input(type="checkbox")
                    span.checkbox-list__fake
                    span.checkbox-list__text Free
        .custom-select-wrapper.cards__filter-btn
          button.custom-select.custom-select--primary.btn.btn--secondary(type="button" aria-expanded="false" aria-label="Choose plan" aria-controls="grid-filter-2")
            span.custom-select__placeholder
              span Sort by default
              svg.custom-select__arrow(width="8" height="8")
                use(xlink:href="sprite.svg#arrow-down_sprite") 
          .custom-select__content.custom-select__content--primary(id="grid-filter-2" aria-hidden="true") 
            .custom-select__heading.hidden-desktop 
              h3.custom-select__title  Sort
              button.custom-select__close.js-close-select(type="button")
                svg(width="20" height="20")
                  use(xlink:href="sprite.svg#close_sprite") 
            ul.checkbox-list
              each val,index in [1,2,3,3,3,3] 
                li.checkbox-list__item
                  label.checkbox-list__label
                    input.checkbox-list__input.checkbox-list__input--radio(type="radio" name="sort-radio" value=`${index} Sort by name (A-Z)`)
                    span.checkbox-list__fake-radio
                    span.checkbox-list__text=index + ' Sort by name (A-Z)'
