nav.breadcrumbs
  ul.breadcrumbs__list(itemscope itemtype="https://schema.org/BreadcrumbList")
    each val,index in breadcrumbs
      li.breadcrumbs__item(itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem")
        if (index + 1 === breadcrumbs.length)
          span.breadcrumbs__link.breadcrumbs__link--current(itemprop="item" href="#" )
            span.breadcrumbs__name(itemprop="name" )= val
            meta(itemprop="position" content=`${index + 1}`)
        else
          a.breadcrumbs__link(itemprop="item" href="#")
            span.breadcrumbs__name(itemprop="name" )= val
            meta(itemprop="position" content=`${index + 1}`)